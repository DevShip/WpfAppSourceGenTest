<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <TextBox Width="300" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding TextInput,UpdateSourceTrigger=PropertyChanged}" Margin="10"></TextBox>
        <TextBlock Background="DarkGray" VerticalAlignment="Center" HorizontalAlignment="Center"  FontSize="48" Text="{Binding TextInput}" Margin="10"></TextBlock>
    </StackPanel>
</Window>
